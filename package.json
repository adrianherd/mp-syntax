{
    "name": "mp",
    "displayName": "MP",
    "description": "MP syntax highlighting",
    "version": "0.0.1",
    "publisher": "ahernandez",
    "engines": {
        "vscode": "^1.42.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "repository": {
        "url": "https://github.com/saffronfries/mp-syntax"
    },
    "contributes": {
        "languages": [
			{
                "id": "mp",
                "extensions": [
                    ".htm","html"
                ],
				"aliases": [
					"MP",
					"mp"
				],
				"mimetypes": [
					"application/x-mp"
				],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
			{
				"scopeName": "source.mp",
                "path": "./syntaxes/source.tmLanguage.json",
                "embeddedLanguages": {
					"source.mp": "mp",
                    "source.perl": "perl",
                    "source.html": "html",
                    "text.html": "html",
                    "text.html.basic": "html",
                    "text.html.derivative": "html",
                    "meta.embedded.block.perl": "perl"
                },
                "injectTo": ["text.html","source.html","text.html.basic","text.html.derivative"]
			}
        ]
    }
}
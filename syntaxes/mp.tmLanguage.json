{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"scopeName": "source.mp",
	"name": "MP",
	"patterns": [
		{
			"include": "#comment"
		},
		{
			"comment": "TODO: handle mpvar inner contents"
		},
		{
			"comment": "TODO: handle mpclose , probz want different highlighting, parameter name?"
		},
		{
			"comment": "TODO: handle mpinclude, highlight that filename better"
		},
		{
			"include": "#variable-enclosed"
		},
		{
			"include": "#mp-statement"
		},
		{
			"include": "#mp-conditional-block"
		},
		{
			"include": "#mp-template-output"
		},
		{
			"comment": "catch UWE code"
		},
		{
			"include": "text.html.basic"
		}
	],
	"repository": {
		"comment": {
			"patterns": [
				{
					"begin": "/\\*",
					"end": "\\*/",
					"name": "comment.block.mp"
				}
			]
		},
		"mp-statement": {
			"begin": "(<!--)",
			"beginCaptures": {
				"0": {
					"name": "comment.block.html"
				}
			},
			"end": "(-->)",
			"endCaptures": {
				"0": {
					"name": "comment.block.html"
				}
			},
			"patterns": [
				{
					"include": "#mod-perl"
				}
			]
		},
		"mod-perl": {
			"patterns": [
				{
					"include": "#regex"
				},
				{
					"include": "#string"
				},
				{
					"include": "#mp-controls"
				},
				{
					"include": "#function"
				},
				{
					"include": "#constant"
				},
				{
					"include": "#variable"
				},
				{
					"name": "punctuation.accessor.mp",
					"match": "->"
				},
				{
					"comment": "#keyword-acccess, #keyword-operators"
				}
			]
		},
		"function": {
			"patterns": [
				{
					"match": "(\\w+)\\(",
					"captures": {
						"1": {
							"name": "entity.name.function.mp"
						}
					}
				}
			]
		},
		"constant": {
			"patterns": [
				{
					"match": "(\\-?\\d+\\.?\\d*)",
					"captures": {
						"1": {
							"name": "constant.numeric.mp"
						}
					}
				}
			]
		},
		"variable": {
			"patterns": [
				{
					"include": "#variable-enclosed"
				},
				{
					"include": "#variable-perl"
				},
				{
					"include": "#variable-bareword"
				}
			]
		},
		"string-single-quoted": {
			"patterns": [{
					"begin": "'",
					"end": "'",
					"name": "string.quoted.single.mp"
			}]
		},
		"string-double-quoted": {
			"patterns": [{
				"begin": "\"",
				"end": "\"",
				"name": "string.quoted.double.mp",
				"patterns": [
					{"include": "#variable-enclosed"},
					{"include": "#escape-characters"}
				]
			}]
		},
		"string": {
			"patterns": [
				{"include": "#sql-string-single-quoted"},
				{"include": "#sql-string-double-quoted"},
				{"include": "#string-single-quoted"},
				{"include": "#string-double-quoted"}
			]
		},
		"sql-string-perl-qq": {
			"comment": "Ignore case for SQL starts",
			"begin": "qq\\s*([^\\(\\{\\[\\<\\w\\s])\\s*(?=(?i:(SELECT|INSERT|UPDATE|DELETE|CREATE|REPLACE|ALTER|AND|LIMIT|ORDER BY)))",
			"beginCaptures": {
			  "0": {
				"name": "punctuation.definition.string.begin.mp"
			  }
			},
			"end": "\\1",
			"endCaptures": {
			  "0": {
				"name": "punctuation.definition.string.end.mp"
			  }
			},
			"name": "string.quoted.other.qq.mp",
			"patterns": [
				{"include": "#escape-characters"},
				{"include": "source.sql"}
			]
		},
		"string-perl-qq": {
			"comment": "Ignore case for SQL starts",
			"begin": "qq\\s*([^\\(\\{\\[\\<\\w\\s])",
			"beginCaptures": {
			  "0": {
				"name": "punctuation.definition.string.begin.mp"
			  }
			},
			"end": "\\1",
			"endCaptures": {
			  "0": {
				"name": "punctuation.definition.string.end.mp"
			  }
			},
			"name": "string.quoted.other.qq.mp",
			"patterns": [
				{"include": "#escape-characters"},
				{"include": "source.sql"}
			]
		},
		"sql-string-double-quoted": {
            "begin": "(?i)\"\\s*(?=(SELECT|INSERT|UPDATE|DELETE|CREATE|REPLACE|ALTER|AND|LIMIT|ORDER BY)\\b)",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.definition.string.begin.mp"
                }
            },
            "contentName": "source.sql.embedded.mp",
            "end": "\"",
            "endCaptures": {
                "0": {
                    "name": "punctuation.definition.string.end.mp"
                }
            },
            "name": "string.quoted.double.sql.mp",
            "patterns": [
				{"include": "#variable-enclosed"},
				{"include": "#escape-characters"},
				{"include": "source.sql"}
            ]
        },
        "sql-string-single-quoted": {
            "begin": "(?i)'\\s*(?=(SELECT|INSERT|UPDATE|DELETE|CREATE|REPLACE|ALTER|AND|LIMIT|ORDER BY)\\b)",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.definition.string.begin.mp"
                }
            },
            "contentName": "source.sql.embedded.mp",
            "end": "'",
            "endCaptures": {
                "0": {
                    "name": "punctuation.definition.string.end.mp"
                }
            },
            "name": "string.quoted.single.sql.mp",
            "patterns": [
                {"include": "source.sql"},
				{"include": "#escape-characters"}
            ]
        },
		"regex": {
			"patterns": [
				{
					"match": "[a-zA-Z]?/.*/?.*?/[a-zA-Z]?",
					"name": "string.regexp"
				}
			]
		},
		"escape-characters": {
			"patterns": [
				{
					"comment": "This captures a lot of escape characters. Copied from js syntax",
					"name": "constant.character.escape.mp",
					"match": "\\\\(x[0-9A-Fa-f]{2}|u[0-9A-Fa-f]{4}|u\\{[0-9A-Fa-f]+\\}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.|$)"
				}
			]
		},
		"variable-bareword": {
			"patterns": [{
				"match": "(\\w+)",
				"captures": {
					"1": {
						"name": "storage.type.var.mp"
					}
				}
			}]
		},
		"variable-perl": {
			"patterns": [{
				"match": "(\\$\\w+)",
				"captures": {
					"1": {
						"name": "storage.type.var.mp"
					}
				}
			}]
		},
		"variable-enclosed": {
			"patterns": [{
				"match": "(\\$\\{)(\\w+)(\\})",
				"captures": {
					"1": {
						"name": "punctuation.definition.variable.mp"
					},
					"2": {
						"name": "storage.type.var.mp"
					},
					"3": {
						"name": "punctuation.definition.variable.mp"
					}
				}
			}]
		},
		"mp-controls": {
			"patterns": [{
				"match": "(MPIF|MPELSEIF|MPELSE|MPLOOP|MPVAR|MPBLOCK|MPFUNCTION|MPLIB|MPINIT|MPBREAK|\\$INCLUDE|MPENDIF|MPENDLOOP|MPENDVAR|MPENDBLOCK)",
				"name": "keyword.control.mp"				
			}]
		},
		"mp-control-open": {
			"patterns": [{
				"match": "(MPIF|MPELSEIF|MPELSE|MPLOOP|MPVAR|MPBLOCK|MPFUNCTION|MPLIB|MPINIT|MPBREAK|\\$INCLUDE)",
				"name": "keyword.control.mp"
			}]
		},
		"mp-control-end": {
			"patterns": [{
				"match": "(MPENDIF|MPENDLOOP|MPENDVAR|MPENDBLOCK)",
				"name": "keyword.control.mp"
			}]
		},
		"mp-operators": {
			"comment": "TODO: get all operators matched here, - + && || % etc"
		},
		"mp-accessors": {
			"comment": "TODO: capture -> for variables, maybe ${} and @{} syntax as well"
		},
		"mp-conditional-logical-operators": {
			"match": "(?i)(and|or)",
			"name": "keyword.operator.mp"
		},
		"mp-conditional-block": {
			"begin": "\\[",
			"end": "\\]",
			"patterns": [
				{"include": "#mp-conditional-block-logic"},
				{"include": "#mp-conditional-block-output"}
			]
		},
		"mp-conditional-block-logic": {
			"begin": "(?<=\\[)",
			"end": "\\|+?",
			"patterns": [
				{"include": "#mp-conditional-logical-operators"},
				{"include": "#mod-perl"}
			]
		},
		"mp-conditional-block-output": {
			"begin": "(\\||(?<=\\|))",
			"end": "(?=\\])",
			"patterns":[
				{"include":"#variables"},
				{"include":"text.html.basic"}
			]
		},
		"mp-template-output": {
			"begin": "\\~",
			"end": "\\~",
			"patterns": [
				{"include": "#mod-perl"}
			]
		}
	}
}
